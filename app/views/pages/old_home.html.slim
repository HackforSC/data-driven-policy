= provide(:title, 'Home')

div.row
  div.large-12.columns
    div.panel
      h1 Home
div.row
  div.large-12.columns
div.row
  javascript:
      $(function() {
        new Highcharts.Chart({
          chart: {
            renderTo: "weight-chart"
          },
          title: {
            text: "Past 2 Months"
          },
          xAxis: {        
            type: 'datetime',
            dateTimeLabelFormats: {
              second: '%e. %b',
              minute: '%e. %b',
              hour: '%e. %B',
              day: '%e. %b',
              week: '%e. %b',
              month: '%e. %b',
              year: '%e. %b'
            }
          },
          yAxis: {
            title: {
              text: "Weight"
            }
          },
          tooltip:{
            formatter: function(){
              return Highcharts.dateFormat("%B %e %Y", this.x) + ':' + 
              Highcharts.numberFormat(this.y, 1);
            }
          },
          series: [{
            name: "Daily Weight",
            pointInterval: <%= 1.day * 1000 %>,
            data:[ <%= @data %> ]
          }]
        })
      })
div[id="weight-chart" style="height=300px; width=600px;"]
